<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/swipe_fresh_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ac_fragment_content_reply_recycler_view"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/rv_bottom"
        android:paddingLeft="@dimen/rv_margin"
        android:paddingRight="@dimen/rv_margin"
        android:paddingTop="@dimen/rv_margin"
        android:scrollbars="none"/>

</android.support.v4.widget.SwipeRefreshLayout>